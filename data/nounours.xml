<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="nounours" _label="Nounours">
	<command arg="-screensaver -stretch" />

	<select id="theme">
		<option id="default" _label="Default theme"
			arg-set="-theme default" />
		<option id="rainbow" _label="Rainbow Nounours theme"
			arg-set="-theme rainbow" />
		<option id="robot" _label="Android robot theme"
			arg-set="-theme robot" />
		<option id="random" _label="Random theme"
			arg-set="-theme random" />
	</select>

	<select id="idle.time">
		<option id="15" _label="Fall asleep after 15 seconds"
			arg-set="-sleep-after 15" />
		<option id="30" _label="Fall asleepa fter 30 seconds"
			arg-set="-sleep-after 30" />
		<option id="60" _label="Fall asleep after 1 minute"
			arg-set="-sleep-after 60" />
		<option id="300" _label="Fall asleep after 5 minutes"
			arg-set="-sleep-after 300" />
	</select>
	<_description>

		Written by Carmen Alvarez, 2012
	</_description>
</screensaver>
